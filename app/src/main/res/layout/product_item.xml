<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="4dp">

    <ImageView
        android:id="@+id/image_view_logo"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/white"
        android:scaleType="fitCenter"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/text_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/text_price"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="12sp"
        tools:text="Product Name" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">


        <TextView
            android:id="@+id/text_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:gravity="center_vertical"
            android:padding="2dp"
            android:textSize="12sp"
            tools:text="000" />

        <TextView
            android:id="@+id/text_special"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_price"
            android:layout_marginEnd="8dp"
            android:gravity="center_vertical"
            android:padding="2dp"
            android:textSize="12sp"
            tools:text="000" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/image_remove"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_remove_circle_24" />

            <TextView
                android:id="@+id/item_quantity"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@id/image_remove"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="0" />

            <ImageView
                android:id="@+id/image_add"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@id/item_quantity"
                android:src="@drawable/ic_baseline_add_circle_24" />

        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>